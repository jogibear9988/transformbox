<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ThinBorderStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="#CECECE"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="0 0 3 0"/>
        <Setter Property="Padding" Value="5"/>
    </Style>

    <Style x:Key="BorderStyle" TargetType="Border" BasedOn="{StaticResource ThinBorderStyle}">
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="5"/>
    </Style>

    <Style x:Key="CanvasBorderStyle" TargetType="Border" BasedOn="{StaticResource ThinBorderStyle}">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <Style x:Key="CommandButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Margin" Value="0 0 5 0"/>
    </Style>

    <Style x:Key="TextLabelStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>